            "program": "${fileDirname}/../bin/${fileBasenameNoExtension}_Debug.exe",
            "args": ["0", "5", "100"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/../bin",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Launch Generic Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileDirname}/../bin/${fileBasenameNoExtension}_Release.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal"
        }
